    <method name="InstallProvideFiles">
      <annotation name="org.freedesktop.DBus.GLib.Async" value=""/>
      <doc:doc>
        <doc:description>
          <doc:para>
            Installs packages to provide files.
          </doc:para>
        </doc:description>
      </doc:doc>
      <arg type="u" name="xid" direction="in">
        <doc:doc>
